# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Your application URL (for production)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Environment (development, production, test)
NODE_ENV=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# NextAuth configuration (if using NextAuth)
NEXTAUTH_SECRET=your-nextauth-secret-here-minimum-32-characters
NEXTAUTH_URL=https://yourdomain.com

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# ClickPesa API credentials
CLICKPESA_API_KEY=your-clickpesa-api-key
CLICKPESA_SECRET=your-clickpesa-secret

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW=900000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL in milliseconds
CACHE_TTL_PRODUCTS=300000      # 5 minutes
CACHE_TTL_CATEGORIES=1800000   # 30 minutes
CACHE_TTL_ADVERTISEMENTS=600000 # 10 minutes

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection string (if using direct database connection)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# AWS S3 configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Google Analytics (if using)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Sentry for error monitoring (if using)
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug logging in development
DEBUG=true

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Use strong, unique secrets for production
# 3. Rotate secrets regularly
# 4. Use different secrets for different environments
# 5. Monitor for exposed secrets in logs and error messages
# 6. Use environment-specific configurations
# 7. Validate all environment variables on startup
# 8. Use least privilege principle for API keys
# 9. Enable audit logging for sensitive operations
# 10. Regularly review and update security configurations